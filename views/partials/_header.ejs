<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!username) { %> 
      <form class="form-inline" method="POST" action="/login">
        <input class="form-control mr-sm-2" name="username" placeholder="Username">
        <button class="btn btn-outline-light my-sm-0" type="Login">
          Login</button>
        </form>
        <% } %> 
        <% if (username) { %>
         <p>Logged in as: <%=username%></p>
            <form class="form-inline" method="POST" action="/logout">
            <button class="btn btn-outline-danger my-sm-0">
             Logout</button>
            </form>
            <% } %> 
      </div>
</nav>
</header>